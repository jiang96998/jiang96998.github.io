        <li><strong>2023.02</strong> — Institute of Medical Informatics, <em>University of Lübeck</em> (online) (Prof. Floris Ernst)</li>
        <li>
          <strong>2023.02</strong> — The Robotics Institute, <em>Carnegie Mellon University</em> (online) (Prof. John Galeotti & Prof. Howie Choset)
        </li>
      </ul>
    {% endif %}

    <!-- Social -->
    {% if page.social %}
      <div class="social">
        <div class="contact-icons">{% include social.liquid %}</div>

        <div style="margin-top: 2rem; text-align: center;">
          <script
            type="text/javascript"
            id="clustrmaps"
            src="//clustrmaps.com/map_v2.js?d=MTr4mMxVu4jHn2BXt1gjDweKZnh5HY9qz_l0W2P_rTI&cl=ffffff&w=a"
          ></script>
        </div>

        <div class="contact-note">{{ site.data[site.active_lang].strings.contact_note }}</div>
        <!-- News -->
      </div>
    {% endif %}

    {% if site.newsletter and site.newsletter.enabled and site.footer_fixed %}
      {% include newsletter.liquid center=false %}
    {% endif %}
  </article>
</div>
